@model IEnumerable<Category>


<div class="container">
    <div class="row">
        <div class="col col-md-6"><h2>Category List</h2></div>
        <div class="col col-md-6 text-end">

            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>

</table>
