@using BookStore.Models
@model Category

<form method="post">

    <div class="row pb-2">
        <h2>Edit Category</h2>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3 p-1">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3 p-1">
        <label asp-for="Displayorder"></label>
        <input asp-for="Displayorder" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Displayorder"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary form-control">Update Category</button>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}