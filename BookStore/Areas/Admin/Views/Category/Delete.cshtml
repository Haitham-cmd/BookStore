@using BookStore.Models
@model Category

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row pb-2">
        <h2>Delete Category</h2>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3 p-1">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" disabled />
    </div>
    <div class="mb-3 p-1">
        <label asp-for="Displayorder"></label>
        <input asp-for="Displayorder" type="text" class="form-control" disabled />
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-danger form-control">Delete Category</button>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}