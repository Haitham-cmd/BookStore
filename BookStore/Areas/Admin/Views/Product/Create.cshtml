@using BookStore.Models;
@model Product

<form method="post" enctype="multipart/form-data">

    <div class="row pb-2">
        <h2>Create Product</h2>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3 p-1">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3 p-1">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control" />
    </div>
    <div class="mb-3 p-1">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="ISBN"></span>
    </div>
    <div class="mb-3 p-1">
        <label asp-for="Author"></label>
        <input asp-for="Author" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="mb-3 p-1">
        <label asp-for="ListPrice"></label>
        <input asp-for="ListPrice" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="ListPrice"></span>

    </div>
    <div class="mb-3 p-1">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" type="text" asp-items="ViewBag.CategoryList" class="form-select">
            <option value="0" disabled selected>-- Select Category --</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <div class="mb-3 p-1">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3 p-1">
        <label asp-for="Price50"></label>
        <input asp-for="Price50" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Price50"></span>
    </div>
    <div class="mb-3 p-1">
        <label asp-for="Price100"></label>
        <input asp-for="Price100" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Price100"></span>
    </div>
    <div class="mb-3 p-1">
        <label asp-for="ImageUrl"></label>
        <input type="file" asp-for="ImageUrl" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary form-control">Create Product</button>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}